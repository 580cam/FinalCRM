{
  "name": "@moving-company/box-estimation",
  "version": "1.0.0",
  "description": "Comprehensive box estimation system for moving company operations",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write ."
  },
  "keywords": [
    "moving",
    "packing",
    "estimation",
    "boxes",
    "logistics",
    "business-logic"
  ],
  "author": "Moving Company CRM Team",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/*.d.ts",
      "!**/node_modules/**",
      "!**/*.test.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/no-explicit-any": "warn",
      "@typescript-eslint/no-unused-vars": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "*.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/moving-company/estimation-system.git"
  },
  "bugs": {
    "url": "https://github.com/moving-company/estimation-system/issues"
  },
  "homepage": "https://github.com/moving-company/estimation-system#readme"
}